<div class="container">

  <h1><%=@user.username%></h1>
  first name: <%=@user.first_name%>
  <br>
  last name: <%=@user.last_name%>
  <br>
  email: <%=@user.email%><br><br>

<form class="pure-form pure-form-stacked" method="get" action="/users/<%=@user.id%>/edit">
    <input type="submit" value="edit profile">
  </form>

  <% @user.trips.each do |trip| %>
   Trip Title: <a href='/trips/<%=trip.id%>'><%= trip.title %></a><br>
  <% end %>

</div>
