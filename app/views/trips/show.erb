<div class="container">

  <a href="/">home</a>

  <h1><%= @trip.title %></h1><br>
  category: <%= @trip.category %><br>
  season: <%= @trip.season %><br>
  comments: <%= @trip.comments %><br>
  <br>

  <% @trip.destinations.each do |destination| %>
      City: <%= destination.city %><br>
      Country: <%= destination.country %><br>
      Highlights: <%= destination.highlights %><br>
      Lodging: <%= destination.lodging %><br>
      Transportation:<%= destination.transportation %><br>
      Days: <%= destination.days %><br>
      <hr>
  <% end %>


<form action="/trips/<%= @trip.id %>/destinations/new" method="get">
<input type="submit" value="Add city!">
</form>